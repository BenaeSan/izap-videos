<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>iZAP Videos</name>
	<author>iZAP Team</author>
	<version>4.0</version>
	<blurb>Offserver and Onserver video adding functionality for elgg.</blurb>
	<description>This plugin provides full video fucntionality to elgg.</description>
	<website>http://www.pluginlotto.com/pg/store</website>
	<copyright>(C) iZAP Web Solutions</copyright>
	<license>GNU Public License version 2</license>

	<requires>
		<type>elgg_version</type>
		<version>2011010401</version>
	</requires>

    <requires>
      <type>plugin</type>
      <name>izap-elgg-bridge</name>
      <version>2.0</version>
    </requires>

    <requires>
      <type>php_extension</type>
      <name>curl</name>
    </requires>

    <requires>
      <type>priority</type>
      <plugin>izap-elgg-bridge</plugin>
      <priority>after</priority>
    </requires>
    
	<category>Media</category>
	<admin_interface>advanced</admin_interface>
    <on_activate>izap_videos_on_activation</on_activate>

</plugin_manifest>